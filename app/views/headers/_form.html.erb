<%= form_for [@newsletter, @header] do |f| %>
	<%= f.label :date, 'Month & Year' %>
	<%= f.date_select(:date, options = {discard_day: true}) %>

	<%= f.label :header_image, 'Image URL' %>
	<%= f.text_field :header_image %>

	<%= f.label :subject_line, 'Subject Line' %>
	<%= f.text_field :subject_line %>

	<%= f.label :body_copy, 'Body Copy' %>
	<%= f.text_area :body_copy %>

	<%= f.submit%>
<% end %>