<h1>All Newsletters</h1>

<!-- Show Open Newsletters Only -->
<h3>Open</h3>
<div class="row">
<% @newsletters.each do |letter| %>
<% if letter.closed === false %>
	<div class="col-sm-2.5" style="margin-left: 10px">
		<div class="card" align="center">
			<div class="card-body">
				<% if letter.header %>
					<h5 class="card-title"><%= link_to letter.adv_name, edit_newsletter_header_path(letter, letter.header), class: "card-link" %></h5>
				<% else %>
					<h5 class="card-title"><%= link_to "Continue Newsletter \n Creation", new_newsletter_header_path(letter), class: "card-link" %></h5>
				<% end %>
				<h6 class="card-subtitle mb-2 text-muted">GCT: <%= letter.gct_id %></h6>
				<h6 class="card-subtitle mb-2 text-muted">MID: <%= letter.adv_id %></h6>
				<%= link_to 'Edit', edit_newsletter_path(letter), class: "card-link" %>
				<%= link_to 'Reject', letter, method: :delete, class: "card-link" %>
				<%= link_to 'Close', close_path(letter), class: "card-link" %>
			</div>
		</div>
	</div>
<% end %>
<% end %>
</div>

<!-- Show Closed Newsletters Only -->
<h3>Closed</h3>	
<div class="row">
<% @newsletters.each do |letter| %>
<% if letter.closed === true %>
	<div class="col-sm-2">
		<div class="card" align="center">
			<div class="card-body">
				<h5 class="card-title"><%= letter.adv_name %></h5>
				<h6 class="card-subtitle mb-2 text-muted">GCT: <%= letter.gct_id %></h6>
				<h6 class="card-subtitle mb-2 text-muted">MID: <%= letter.adv_id %></h6>
				<%= link_to 'Open', open_path(letter), class: "card-link"%>
			</div>
		</div>	
	</div>
<% end %>	
<% end %>	
</div>	